# API Keys
COHERE_API_KEY=your_cohere_api_key_here

# Qdrant Vector Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_if_cloud

# Application Configuration
APP_NAME=Physical AI & Humanoid Robotics Book Chatbot
APP_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=7860

# CORS Configuration
CORS_ORIGINS=["https://github.com/DUAAPIRZADA22", "http://localhost:3000", "http://localhost:7860"]

# RAG Configuration
MIN_CHUNK_SIZE=50
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=100
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.7
EMBEDDING_BATCH_SIZE=100
USE_RERANK=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Content Directory
BOOK_CONTENT_DIR=book_content

# Embedding Model Configuration
EMBEDDING_MODEL=embed-english-v3.0
RERANK_MODEL=rerank-english-v3.0

# Cache Configuration
ENABLE_EMBEDDING_CACHE=true
CACHE_MAX_SIZE=10000

# Health Check
HEALTH_CHECK_INTERVAL=30