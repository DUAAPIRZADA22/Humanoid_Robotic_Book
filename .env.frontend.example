# =================================================================
# FRONTEND (Docusaurus) Environment Variables
# Physical AI & Humanoid Robotics Book
# =================================================================
# Copy this file to .env.frontend.local and fill in your actual values
# Never commit .env.frontend.local to version control!

# =================================================================
# CHAT WIDGET CONFIGURATION
# =================================================================

# API endpoint for the chat backend (REQUIRED)
CHAT_API_ENDPOINT=http://localhost:7860/api/v1

# API key for authenticating with the chat backend (REQUIRED)
CHAT_API_KEY=railway-demo-key

# Production API endpoint (uncomment when deploying to production)
# CHAT_API_ENDPOINT=https://your-app-name.up.railway.app/api/v1

# =================================================================
# APPLICATION SETTINGS
# =================================================================

# Node.js environment mode
NODE_ENV=development

# Docusaurus deployment URL for production
DEPLOYMENT_URL=https://humanoid-robotic-book.vercel.app

# Site URL for sitemap and social cards
SITE_URL=https://humanoid-robotic-book.vercel.app

# Base URL if deploying to subdirectory
# BASE_URL=/docs/

# Organization name (for GitHub pages and social cards)
ORGANIZATION_NAME=DUAAPIRZADA22

# Project name (for GitHub pages)
PROJECT_NAME=Humanoid_Robotic_Book

# =================================================================
# CHAT WIDGET BEHAVIOR
# =================================================================

# Chat widget initial visibility (true/false)
CHAT_WIDGET_VISIBLE=true

# Chat widget position (bottom-right, bottom-left, top-right, top-left)
CHAT_WIDGET_POSITION=bottom-right

# Enable chat sounds (true/false)
CHAT_SOUND_ENABLED=false

# Maximum chat history length
CHAT_MAX_HISTORY=50

# Typing indicator delay in milliseconds
CHAT_TYPING_DELAY=1000

# =================================================================
# ANALYTICS & TRACKING (OPTIONAL)
# =================================================================

# Google Analytics Measurement ID
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Analytics 4 Measurement ID
# GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# Hotjar Site ID
# HOTJAR_SITE_ID=XXXXXXXX


# Microsoft Clarity ID
# CLARITY_ID=XXXXXXXX

# =================================================================
# SOCIAL MEDIA INTEGRATION (OPTIONAL)
# =================================================================

# Twitter username
# TWITTER_USERNAME=your_twitter

# LinkedIn organization page
# LINKIN_ORG=https://linkedin.com/company/your-org

# Facebook page URL
# FACEBOOK_PAGE=https://facebook.com/your-page

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================

# Enable/disable Docusaurus webpack bundle analyzer
# BUNDLE_ANALYZER=false

# Enable/disable source maps in development
# GENERATE_SOURCEMAP=true

# Enable hot reload in development
# FAST_REFRESH=true

# Development server port (default: 3000)
# PORT=3000

# Development server host
# HOST=localhost

# =================================================================
# PERFORMANCE SETTINGS (OPTIONAL)
# =================================================================

# Enable/disable PWA functionality
# PWA_ENABLE=true

# Cache busting version
# CACHE_BUSTING_VERSION=1.0.0

# Image optimization quality (1-100)
# IMAGE_OPTIMIZATION_QUALITY=85

# Enable lazy loading for images
# LAZY_LOADING=true

# =================================================================
# INTEGRATION SETTINGS (OPTIONAL)
# =================================================================

# Algolia DocSearch credentials
# ALGOLIA_APP_ID=XXXXXXXXXX
# ALGOLIA_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# ALGOLIA_INDEX_NAME=docs

# GitHub repository URL for edit links
# GITHUB_REPO=https://github.com/DUAAPIRZADA22/Humanoid_Robotic_Book

# Custom CSS for styling overrides
# CUSTOM_CSS_PATH=./src/css/custom.css

# Custom SCSS for styling overrides
# CUSTOM_SCSS_PATH=./src/css/custom.scss

# Favicon and manifest icons
# FAVICON_PATH=./static/img/favicon.ico
# MANIFEST_PATH=./static/manifest.json

# =================================================================
# SEO & METADATA (OPTIONAL)
# =================================================================

# Default title template for pages
# TITLE_TEMPLATE=%s | Physical AI & Humanoid Robotics Book

# Default description for SEO
# DESCRIPTION=Comprehensive guide to Physical AI and Humanoid Robotics

# Default keywords for SEO
# KEYWORDS=robotics, AI, humanoid, physical intelligence, automation

# Author name
# AUTHOR=Duaa Pirzada

# OpenGraph image URL
# OG_IMAGE=https://your-domain.com/img/og-image.png

# Twitter card type (summary, summary_large_image)
# TWITTER_CARD=summary_large_image

# =================================================================
# CONTENT MANAGEMENT (OPTIONAL)
# =================================================================

# Base URL for content (if using external CMS)
# CONTENT_BASE_URL=https://cms.your-domain.com

# API key for content management
# CMS_API_KEY=your_cms_api_key

# Enable content versioning
# CONTENT_VERSIONING=false

# Content refresh interval in minutes
# CONTENT_REFRESH_INTERVAL=60