# =================================================================
# Physical AI & Humanoid Robotics Book - Environment Variables
# =================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =================================================================
# FRONTEND (Docusaurus) Environment Variables
# =================================================================

# Chat Widget Configuration
# API endpoint for the chat backend
CHAT_API_ENDPOINT=http://localhost:8000

# API key for authenticating with the chat backend
CHAT_API_KEY=railway-demo-key

# Production API endpoint (uncomment when deploying)
# CHAT_API_ENDPOINT=https://your-app-name.up.railway.app/api/v1

# Development mode settings
NODE_ENV=development

# Docusaurus deployment URL
DEPLOYMENT_URL=https://humanoid-robotic-book.vercel.app

# =================================================================
# BACKEND (Flask/FastAPI) Environment Variables
# =================================================================

# API Keys & Authentication
# Cohere API key for AI embeddings and reranking (required for AI features)
COHERE_API_KEY=your_cohere_api_key_here

# Vector Database Configuration (Qdrant)
# Host for Qdrant vector database
QDRANT_HOST=localhost

# Port for Qdrant server
QDRANT_PORT=6333

# API key for Qdrant Cloud (if using cloud service)
QDRANT_API_KEY=your_qdrant_api_key_if_cloud

# Application Configuration
APP_NAME=Physical AI & Humanoid Robotics Book Chatbot
APP_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=7860

# Python Runtime Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=["https://humanoid-robotic-book.vercel.app", "http://localhost:3000", "http://localhost:7860"]

# =================================================================
# RAG (Retrieval-Augmented Generation) Configuration
# =================================================================

# Text Chunking Settings
MIN_CHUNK_SIZE=50
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=100
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.7
EMBEDDING_BATCH_SIZE=100

# Model Configuration
# Cohere embedding model name
EMBEDDING_MODEL=embed-english-v3.0

# Cohere reranking model name
RERANK_MODEL=rerank-english-v3.0

# Enable/disable reranking (true for better results, false for faster)
USE_RERANK=true

# =================================================================
# PERFORMANCE & MONITORING
# =================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Cache Configuration
ENABLE_EMBEDDING_CACHE=true
CACHE_MAX_SIZE=10000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# =================================================================
# RAILWAY DEPLOYMENT SPECIFIC
# =================================================================

# Railway deployment configuration
# Forces Railway to use backend directory instead of root
ROOT_DIRECTORY=backend

# Railway deployment port
PORT=7860

# =================================================================
# OPTIONAL: EXTERNAL SERVICES
# =================================================================

# Database (if adding persistent storage)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (if adding caching)
# REDIS_URL=redis://host:port

# Analytics (if adding tracking)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Sentry (if adding error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# =================================================================
# DEVELOPMENT & TESTING
# =================================================================

# Local development settings
FLASK_ENV=development

# Testing settings
TESTING=false

# Mock mode (for testing without API keys)
USE_MOCK_RESPONSES=false

# =================================================================
# SECURITY SETTINGS
# =================================================================

# JWT Secret (if implementing authentication)
# JWT_SECRET_KEY=your_jwt_secret_here

# Encryption keys
# ENCRYPTION_KEY=your_encryption_key_here

# Session configuration
# SESSION_SECRET=your_session_secret_here

# =================================================================
# ENVIRONMENT PROFILES
# =================================================================

# Uncomment one of these profiles for different environments:

# Development Profile
# PROFILE=development

# Production Profile
# PROFILE=production
# DEBUG=false
# LOG_LEVEL=WARNING

# Testing Profile
# PROFILE=testing
# DEBUG=true
# TESTING=true